{
    "name": "@uvarovag/tsconfig-react",
    "version": "1.3.3",
    "description": "Shared TypeScript configuration for React projects using TypeScript",
    "main": "tsconfig.json",
    "scripts": {
        "fix": "prettier --write '**/*.{ts,tsx,js,json,css,html,md}'",
        "deploy": "npm publish",
        "prepare": "husky"
    },
    "keywords": [
        "typescript",
        "tsconfig",
        "shared-config"
    ],
    "author": "@uvarovag",
    "license": "MIT",
    "homepage": "https://github.com/uvarovag/tsconfig-react/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uvarovag/tsconfig-react.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "devDependencies": {
        "@uvarovag/prettier-config": "^1.0.6",
        "husky": "^9.1.7",
        "prettier": "^3.4.2"
    }
}
